<!-- Profile Section -->
<div class="sidebar-profile">
  <div class="sidebar-avatar">
    <img src="/images/avatar.jpg" alt="{{ config.author }}">
  </div>

  <div class="sidebar-name">{{ config.author }}</div>
  {% if false %}
  <div class="sidebar-bio">{{ config.subtitle }}</div>
  {% endif %}
</div>

<!-- Navigation -->
<nav class="sidebar-nav">
  <div class="sidebar-nav-section">
    <div class="sidebar-nav-title">Navigation</div>
    <ul class="sidebar-nav-list">
      <li class="sidebar-nav-item">
        <a href="/" class="sidebar-nav-link">
          <span class="sidebar-nav-icon">⌂</span>
          Home
        </a>
      </li>
      <li class="sidebar-nav-item">
        <a href="/archives/" class="sidebar-nav-link">
          <span class="sidebar-nav-icon">◷</span>
          Archives
        </a>
      </li>
      <li class="sidebar-nav-item">
        <a href="/categories/" class="sidebar-nav-link">
          <span class="sidebar-nav-icon">◫</span>
          Categories
        </a>
      </li>
      <li class="sidebar-nav-item">
        <a href="/tags/" class="sidebar-nav-link">
          <span class="sidebar-nav-icon">⌖</span>
          Tags
        </a>
      </li>
    </ul>
  </div>

  {% if site.categories.length > 0 %}
  <div class="sidebar-nav-section">
    <div class="sidebar-nav-title">Categories</div>
    <ul class="sidebar-nav-list">
      {% for category in site.categories.toArray() %}
      <li class="sidebar-nav-item">
        <a href="{{ url_for(category.path) }}" class="sidebar-nav-link">
          <span>{{ category.name }}</span>
          <span style="margin-left: auto; font-size: 12px; opacity: 0.6;">{{ category.posts.length }}</span>
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  {% if site.tags.toArray().length > 0 %}
  <div class="sidebar-nav-section">
    <div class="sidebar-nav-title">Tags</div>
    <div style="display: flex; flex-wrap: wrap; gap: 6px;">
      {% for tag in site.tags.toArray().slice(0, 15) %}
      <a href="{{ url_for(tag.path) }}"
         style="font-size: 12px; padding: 4px 8px; background: var(--color-bg); border-radius: 4px; color: var(--color-text-secondary);">
        {{ tag.name }}
      </a>
      {% endfor %}
    </div>
  </div>
  {% endif %}
</nav>

<!-- Stats -->
<div class="sidebar-stats">
  <div class="sidebar-stat-item">
    <div class="sidebar-stat-value">{{ site.posts.length }}</div>
    <div class="sidebar-stat-label">Posts</div>
  </div>
  <div class="sidebar-stat-item">
    <div class="sidebar-stat-value">{{ site.categories.length }}</div>
    <div class="sidebar-stat-label">Categories</div>
  </div>
  <div class="sidebar-stat-item">
    <div class="sidebar-stat-value">{{ site.tags.length }}</div>
    <div class="sidebar-stat-label">Tags</div>
  </div>
</div>

